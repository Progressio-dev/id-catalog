    {
      "value": "related",
      "label": "Related Product",
      "description": "Products that are commonly purchased together"
    },
    {
      "value": "variant",
      "label": "Product Variant",
      "description": "Different sizes, colors, or configurations of the same product"
    },
    {
      "value": "see_also",
      "label": "See Also",
      "description": "Similar or alternative products"
    },
    {
      "value": "replaced_by",
