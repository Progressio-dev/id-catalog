{
  "version": "1.0",
  "description": "Example grouping configurations",
  "configurations": [
    {
      "name": "Group by Category",
      "description": "Single-level grouping by product category",
      "groupLevels": [
        {
          "field": "category",
          "sortDirection": "asc",
          "level": 0
        }
      ],
      "groupOptions": {
        "showHeaders": true,
        "showFooters": false,
        "showItemCount": true,
        "pageBreakPerGroup": false,
        "headerStyle": "heading1",
        "separatorType": "line"
      }
    },
    {
      "name": "Group by Category and Brand",
      "description": "Two-level grouping: category first, then brand",
      "groupLevels": [
        {
          "field": "category",
          "sortDirection": "asc",
          "level": 0
        },
        {
          "field": "brand",
          "sortDirection": "asc",
          "level": 1
        }
      ],
      "groupOptions": {
        "showHeaders": true,
        "showFooters": false,
        "showItemCount": true,
        "pageBreakPerGroup": true,
        "headerStyle": "heading1",
        "separatorType": "space"
      }
    },
    {
      "name": "Group by Department > Category > Brand",
      "description": "Three-level hierarchical grouping",
      "groupLevels": [
        {
          "field": "department",
          "sortDirection": "asc",
          "level": 0
        },
        {
          "field": "category",
          "sortDirection": "asc",
          "level": 1
        },
        {
          "field": "brand",
          "sortDirection": "asc",
          "level": 2
        }
      ],
      "groupOptions": {
        "showHeaders": true,
        "showFooters": true,
        "showItemCount": true,
        "pageBreakPerGroup": true,
        "headerStyle": "heading2",
        "separatorType": "line"
      }
    },
    {
      "name": "Group by Price Range",
      "description": "Group products by price tier (requires formula)",
      "groupLevels": [
        {
          "field": "price_tier",
          "sortDirection": "desc",
          "level": 0
        }
      ],
      "groupOptions": {
        "showHeaders": true,
        "showFooters": true,
        "showItemCount": true,
        "pageBreakPerGroup": false,
        "headerStyle": "heading1",
        "separatorType": "line"
      },
      "notes": "Requires a formula: price_tier = IF({price} > 1000, 'Premium', IF({price} > 500, 'Standard', 'Budget'))"
    },
    {
      "name": "Group by Availability",
      "description": "Group by stock status",
      "groupLevels": [
        {
          "field": "availability_status",
          "sortDirection": "asc",
          "level": 0
        }
      ],
      "groupOptions": {
        "showHeaders": true,
        "showFooters": false,
        "showItemCount": true,
        "pageBreakPerGroup": false,
        "headerStyle": "bold",
        "separatorType": "space"
      }
    }
  ],
  "aggregation_examples": [
    {
      "description": "Count items per group",
      "field": "id",
      "function": "count"
    },
    {
      "description": "Sum total price per group",
      "field": "price",
      "function": "sum"
    },
    {
      "description": "Average price per group",
      "field": "price",
      "function": "avg"
    },
    {
      "description": "Minimum price in group",
      "field": "price",
      "function": "min"
    },
    {
      "description": "Maximum price in group",
      "field": "price",
      "function": "max"
    }
  ],
  "header_styles": [
    {
      "value": "heading1",
      "label": "Heading 1",
      "description": "Large, bold heading"
    },
    {
      "value": "heading2",
      "label": "Heading 2",
      "description": "Medium heading"
    },
    {
      "value": "heading3",
      "label": "Heading 3",
      "description": "Small heading"
    },
    {
      "value": "bold",
      "label": "Bold Text",
      "description": "Bold text, same size as body"
    }
  ],
  "separator_types": [
    {
      "value": "line",
      "label": "Line",
      "description": "Horizontal line separator"
    },
    {
      "value": "space",
      "label": "Extra Space",
      "description": "Additional vertical spacing"
    },
    {
      "value": "pageBreak",
      "label": "Page Break",
      "description": "Start new page"
    },
    {
      "value": "none",
      "label": "None",
      "description": "No separator"
    }
  ],
  "examples": {
    "sample_data_structure": {
      "groups": [
        {
          "level": 0,
          "field": "category",
          "value": "Electronics",
          "records": [],
          "subgroups": [
            {
              "level": 1,
              "field": "brand",
              "value": "Sony",
              "records": [
                { "id": 1, "name": "Camera", "price": 599 },
                { "id": 2, "name": "Headphones", "price": 299 }
              ],
              "subgroups": null
            }
          ]
        }
      ],
      "flatList": [
        { "type": "group-header", "level": 0, "value": "Electronics", "itemCount": 2 },
        { "type": "group-header", "level": 1, "value": "Sony", "itemCount": 2 },
        { "type": "record", "data": { "id": 1, "name": "Camera", "price": 599 } },
        { "type": "record", "data": { "id": 2, "name": "Headphones", "price": 299 } }
      ]
    }
  }
}
